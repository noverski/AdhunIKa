          lastPulse = millis();                           // save the time of the last pulse
        }
        counter++;
      }
    }
    (destination=637.5);
    {                                                    //25'
      if(counter<destination){
        if (millis() - lastPulse >= refreshTime) {
          digitalWrite(servoPin7, HIGH);                // Turn the motor on
